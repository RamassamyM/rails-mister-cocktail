<div class="ingredient-block">
  <%= simple_form_for @dose, url: byingredient_cocktails_path, html: {class: 'form-inline right-block' } do |f|%>
    <%= f.association :ingredient, collection: Ingredient.order('name ASC'), label: false, prompt: "Find by ingredient", class: '#myselect' %>
    <%= f.submit "Search", class: "btn btn-success" %>
  <% end %>
</div>


<div class="wrapper-show">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://lorempixel.com/1000/200/nightlife');">
  </div>

  <div class="top-marged all-padded">
    <div class="container">
      <div class="row">
          <div class="col-xs-12">
            <p>
              <%= link_to 'Back', cocktails_path, class: "btn btn-primary"%>
            </p>
            <div class="header">
              <div class="flexed-left">
                <%= image_tag 'cocktail2.png', class: "avatar-large" %>
                <h2><%= @cocktail.name %>
                </h2>
              </div>
            </div>
          </div>
        </div>
      <div class="row">
        <div class="col-sm-4 offset-sm-4">
          <% @doses.each do |dose| %>
            <div class="distributed">
              <p><%= dose.ingredient.name %>:</p>
              <p class="ingredient-dose"><%= dose.description %><%= link_to '🗑️', dose_path(dose), class: "left-marged", method: :delete %></p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8 offset-sm-3">
          <div class="top-marged">
            <h4>Add a new dose</h4>
            <%= render 'doses/form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
